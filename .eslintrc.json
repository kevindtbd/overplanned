{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    },
    {
      "files": ["apps/web/**/*.ts", "apps/web/**/*.tsx"],
      "excludedFiles": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "apps/web/lib/prisma.ts", "apps/web/lib/auth/config.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["@prisma/client", "@prisma/client/*"],
                "message": "Frontend must import from @overplanned/shared-types, not @prisma/client directly. This prevents Prisma relation types from leaking to the frontend."
              },
              {
                "group": ["@overplanned/db", "@overplanned/db/*"],
                "message": "Frontend must import types from @overplanned/shared-types. Use API routes for database access."
              }
            ]
          }
        ]
      }
    }
  ]
}
