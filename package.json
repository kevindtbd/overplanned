{
  "name": "overplanned",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:migrate": "npm run migrate --workspace=@overplanned/db",
    "db:seed": "npm run seed --workspace=@overplanned/db",
    "db:studio": "npm run studio --workspace=@overplanned/db",
    "db:generate": "npm run generate --workspace=@overplanned/db",
    "codegen": "npm run codegen:jsonschema && npm run codegen:typescript && npm run codegen:pydantic && npm run codegen:qdrant",
    "codegen:jsonschema": "tsx scripts/prisma-to-jsonschema.ts",
    "codegen:typescript": "json2ts -i packages/schemas/ -o packages/shared-types/generated/",
    "codegen:pydantic": "datamodel-codegen --input-file-type jsonschema --input packages/schemas/ --output services/ml/app/schemas/generated/",
    "codegen:qdrant": "tsx scripts/jsonschema-to-qdrant.ts",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@exodus/bytes": "^1.14.1",
    "@mrleebo/prisma-ast": "^0.13.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "json-schema-to-typescript": "^15.0.3",
    "lint-staged": "^16.2.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
