{
  "name": "@overplanned/foundation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "codegen": "npm run codegen:jsonschema && npm run codegen:pydantic && npm run codegen:typescript && npm run codegen:qdrant",
    "codegen:jsonschema": "tsx scripts/prisma-to-jsonschema.ts",
    "codegen:pydantic": "datamodel-code-generator --input packages/schemas/*.json --output services/api/models/generated.py --input-file-type jsonschema --output-model-type pydantic_v2.BaseModel",
    "codegen:typescript": "json-schema-to-typescript packages/schemas/*.json -o packages/shared-types/api.ts",
    "codegen:qdrant": "tsx scripts/jsonschema-to-qdrant.ts"
  },
  "devDependencies": {
    "@mrleebo/prisma-ast": "^0.13.0",
    "json-schema-to-typescript": "^15.0.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
